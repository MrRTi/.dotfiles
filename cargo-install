# install rust before running
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh

# use chache to speed up compilation
cargo install sccache
export RUSTC_WRAPPER=sccache

# install packages
cargo install \
				bat \
				eza \
				fd-find \
				mice \
				mprocs \
				ripgrep \
				wiki-tui \
				cargo-info
