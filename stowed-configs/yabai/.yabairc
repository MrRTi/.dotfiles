#!/usr/bin/env sh

#
# for this to work you must configure sudo such that
# it will be able to run the command without password
#
# see this wiki page for information:
#  - https://github.com/koekeishiya/yabai/wiki/Installing-yabai-(latest-release)#configure-scripting-addition
#
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa
#

# global settings
yabai -m config                                 \
    external_bar                 off:40:0       \
    menubar_opacity              1.0            \
    mouse_follows_focus          on             \
    focus_follows_mouse          off            \
    window_origin_display        default        \
    window_placement             second_child   \
    window_zoom_persist          on             \
    window_shadow                on             \
    window_animation_duration    0.0            \
    window_opacity_duration      0.0            \
    active_window_opacity        1.0            \
    normal_window_opacity        0.90           \
    window_opacity               off            \
    insert_feedback_color        0xffd75f5f     \
    split_ratio                  0.50           \
    split_type                   auto           \
    auto_balance                 off            \
    top_padding                  12             \
    bottom_padding               12             \
    left_padding                 12             \
    right_padding                12             \
    window_gap                   12             \
    layout                       bsp            \
    mouse_modifier               alt            \
    mouse_action1                move           \
    mouse_action2                resize         \
    mouse_drop_action            swap

yabai -m space 1 --label terminal
yabai -m space 2 --label browser
yabai -m space 3 --label work_communication
yabai -m space 4 --label mail
yabai -m space 5 --label calendar
yabai -m space 6 --label personal_communication
yabai -m space 7 --label other


yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^1Password$" manage=off
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^Notes$" manage=off

# Move all other apps to space 7
yabai -m rule --add app="(?!^(System Settings|Calculator|1Password|Finder|Notes)$)(^.+$)" space=other

# Move specific apps to specific place
yabai -m rule --add label="Terminal" app="^WezTerm$" space=terminal
yabai -m rule --add label="Arc" app="^Arc$" space=browser
yabai -m rule --add label="Slack" app="^Slack$" space=work_communication
yabai -m rule --add label="Mail" app="^Mail$" space=mail
yabai -m rule --add label="Proton Mail" app="^Proton Mail$" space=mail
yabai -m rule --add label="Calendar" app="^Calendar$" space=calendar
yabai -m rule --add label="Telegram" app="^Telegram$" space=personal_communication
yabai -m rule --add label="Messages" app="^Messages$" space=personal_communication

yabai -m config external_bar all:36:0

echo "yabai configuration loaded.."
